@model IEnumerable<Project.Models.Data.Kitap>

@{
    ViewBag.Title = "PopulerKitap";
}

<div class="text-center">
    <h2>Popüler Kitap Listesi</h2>

    <p>
        @Html.ActionLink("Yeni Popüler Kitap Ekle", "Create")
    </p>

    <table class="table mx-auto col-md-8">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YasAraligiBaslangic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YasAraligiBitis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PopulerMi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YasAraligiBaslangic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YasAraligiBitis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PopulerMi)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </table>
</div>

